{
  "name": "public-mobile-design-system",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "description": "Public Mobile design system components",
  "author": "Public Mobile",
  "repository": {
    "type": "git",
    "url": "https://github.com/telus/public-mobile-design-system.git"
  },
  "scripts": {
    "storybook": "start-storybook -c ./storybook -p 7777",
    "build-storybook": "build-storybook -c ./storybook",
    "bootstrap": "npm ci && npx lerna bootstrap --hoist && npm run build -- --all",
    "build": "node scripts/build.js",
    "lint": "lint-staged",
    "prepr": "scripts/prePr.sh",
    "lerna:publish": "node scripts/publish.js",
    "scaffold": "node scripts/scaffold.js",
    "test": "jest --config config/jest.config.js --runInBand"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npm run test"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --ext '.js,.jsx' --config config/eslint.config.js --quiet --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.7.2",
    "prop-types": "^15.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@commitlint/config-lerna-scopes": "^8.2.0",
    "@emotion/babel-preset-css-prop": "^10.0.23",
    "@emotion/core": "^10.0.22",
    "@emotion/styled": "^10.0.23",
    "@storybook/addon-actions": "^5.2.6",
    "@storybook/addon-links": "^5.2.6",
    "@storybook/addon-storysource": "^5.2.6",
    "@storybook/addons": "^5.2.6",
    "@storybook/react": "^5.2.6",
    "@telus/semantic-release-config": "^1.3.8",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "autoprefixer": "^9.7.1",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "case": "^1.6.2",
    "css-mediaquery": "^0.1.2",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-config-react-app": "^5.0.2",
    "eslint-plugin-flowtype": "^4.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^3.0.0",
    "jest": "^24.9.0",
    "jest-emotion": "^10.0.17",
    "jest-environment-enzyme": "^7.1.2",
    "jest-enzyme": "^7.1.2",
    "lerna": "^3.18.4",
    "lint-staged": "^9.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.27.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3"
  }
}
